{
  "manifest_version": 3,
  "name": "GitHub PR Contributor Sorter",
  "version": "2.0.0",
  "description": "Sort GitHub pull requests by contributor status with GraphQL API, token support, and smart caching",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pulls*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitHub PR Contributor Sorter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background.js"
  }
}